@model int

<div class="container row pt-2">
    <div class="col-12 text-center">
        <h3 class="text-primary text-center">Payment Successful!</h3>
        Order Number : @Model <br /><br />
        <img src="~/images/lawn_leaf.jpg" width="50%" />
    </div>
    <div class="col-12 text-center" style="color:maroon">
       
        Payment has been applied successfully! <br />
        <a asp-area="Admin"
           asp-controller="Order"
           asp-action="Details"
           asp-route-orderId="@Model" class="btn btn-primary">Back to Order Details</a>

    </div>

</div>  